<div class="row">
  <div class="item">
    <label>Age</label>
    <div class="slide-price slider-holder">
      <div class="slider-box" id="slider">
        <div class="slider-holder-box">
          <div class="progress-bar">
            <input type="hidden" class="max-val" value="99" />
            <input type="hidden" class="min-val" value="18" />
            <%= hidden_field_tag "", params[:age_to].to_s.blank? ? "35" : params[:age_to] , :class => "cur-val-max"  %>
            <%= hidden_field_tag "", params[:age_from].to_s.blank? ? "18" : params[:age_from], :class => "cur-val-min"  %>
<%#*<input type="hidden" class="cur-val-max" value="80" />%>
<%#*<input type="hidden" class="cur-val-min" value="40" />%>
          </div>
        </div>
      </div>
      <div class="price-holder">
        <span class="range-input to-price"><%= text_field_tag :age_from, "#{params[:age_from]}", :class => "range"  %><!--<input class="range" type="text" value="18" id="age_from" name="age_from"/>--></span>
        <span class="range-input from-price right"><%= text_field_tag :age_to, "#{params[:age_to]}", :class => "range-max"  %><!--<input class="range-max" type="text" value="99" id="age_to" name="age_to"/>--></span>
      </div>
    </div>
  </div>
  <div class="item">
    <label>Order by</label>
    <%= select_tag :order, options_for_select(ORDER, (params[:order].to_s.blank? ? 'Closest' : params[:order])), :class => "select-2" %>
  </div>
  
</div>