<script>
  jQuery(function() {
    jQuery(window).scroll(
    function() {
      if (($(window).scrollTop() == $(document).height() - $(window).height()) && jQuery('#notifications_page').val() > 0)
      {
       more_notifications(jQuery('#notifications_page').val())
      }
    });
  });
</script>