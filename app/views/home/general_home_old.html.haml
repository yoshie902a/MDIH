      %div{:class=>"#{image_num == 1 ? 'active' : ''}"}
        %img{:src=>"/images/homepageheros/hero-youngcpl.jpg", :alt=>"" }
      %div{:class=>"#{image_num == 2 ? 'active' : ''}"}
        %img{:src=>"/images/homepageheros/hero-asian.jpg", :alt=>"" }
      %div{:class=>"#{image_num == 3 ? 'active' : ''}"}
        %img{:src=>"/images/homepageheros/hero-interracial.jpg", :alt=>"" }
      %div{:class=>"#{image_num == 4 ? 'active' : ''}"}
        %img{:src=>"/images/homepageheros/hero-mature.jpg", :alt=>"" }
      %div{:class=>"#{image_num == 5 ? 'active' : ''}"}
        %img{:src=>"/images/homepageheros/hero-men.jpg", :alt=>"" }
      %div{:class=>"#{image_num == 6 ? 'active' : ''}"}
        %img{:src=>"/images/homepageheros/hero-women.jpg", :alt=>"" }
      %div{:class=>"#{image_num == 7 ? 'active' : ''}"}
