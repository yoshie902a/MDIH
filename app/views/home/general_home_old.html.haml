        = link_to image_tag("twitter-ab.gif"), "http://twitter.com/mydateishere", :target => "_blank"
      #lrgfb{:style => "padding-right: 90px;"}
        = image_tag("follow-us-ab.gif")



%script
  jQuery(function(){
  setInterval( "slideSwitch()", 5000 );
  });
  //change_image()
  function change_image(){
  var images = ['hero-africanamerican.jpg', 'hero-asian.jpg', 'hero-interracial.jpg', 'hero-mature.jpg', 'hero-men.jpg', 'hero-women.jpg', 'hero-youngcpl.jpg']
  var num = Math.floor(Math.random()*images.length)
  document.getElementById('largecontent').style.backgroundImage = "url(/images/homepageheros/"+images[num]+")";
  setTimeout('change_image()', 5000);
  }
  